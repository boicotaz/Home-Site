    <script>
        if (socket === undefined) {
            var socket = io.connect();
            // socket = io.connect('http://localhost:8082/expenses');
            let data = { user: <%- JSON.stringify(user) %> }
            console.log('user logged in is=========', data.user.id);
            socket.emit('user_connected', data);
            document.addEventListener('LoggedInStatus', function (e) {
                console.log('EVENT FOR LOG STATUS CAUGHT SUCCESSFULLY with user', e.detail);
                RequestFromUser = e.detail
                socket.emit('get_logged_in_users', RequestFromUser);

            });
            socket.on('sent_logged_in_users', function (loggedInUsers) {
                console.log('ABOUT TO INFORM HOME COMPONENT', loggedInUsers);
                var getUserLoggedStatusEventReply = new CustomEvent('LoggedInStatusReply', { detail: loggedInUsers });
                document.dispatchEvent(getUserLoggedStatusEventReply);
            })
            socket.on('user_in_my_group_connected', function (userNames) {
                $(document).ready(function () {

                    window.addEventListener('buttons-created', function (e) {
                        createAutoSuggest();
                        $("#usersInGroup").children().each(function () {
                            console.log($(this).text());
                            userNames.map((name) => {
                                if ($(this).text() == name) {
                                    $(this).removeClass("btn-danger").addClass("btn-success");
                                }
                            });
                        })
                    });
                    $("#usersInGroup").children().each(function () {
                        userNames.map((name) => {
                            if ($(this).text() == name) {
                                $(this).removeClass("btn-danger").addClass("btn-success");
                            }
                        });
                    });
                })
            });

            socket.on('user_in_my_group_added_expense', function (expenseData) {
                console.log('i received the event change in expense table');
                let createEvent = new CustomEvent('new-expense', { detail: expenseData });
                document.dispatchEvent(createEvent);
            })
            socket.on('user_in_my_group_disconnected', function (userName) {
                console.log('disconnect event received by client', userName);
                $("#usersInGroup").children().each(function () {

                    if ($(this).text() == userName) {
                        $(this).removeClass("btn-success").addClass("btn-danger");
                    }

                })
            })
        }
    </script>

    <script type="text/babel" currentUser=<%- user %> src = "../public/js/main.js" ></script>
